<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <TableLayout
        android:background="@color/boton_deshabilitado"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TableRow


            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.005">

            <TableLayout
                android:background="@color/icons"
                android:layout_margin="@dimen/vistas_alert"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/negro_general"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView

                        android:layout_height="70sp"
                        android:layout_width="70sp"
                        android:adjustViewBounds="true"
                        android:id="@+id/imageView5"
                        android:background="@drawable/ic_logo_alert" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_marginBottom="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text=""
                        android:background="@color/icons"
                        android:textColor="@color/negro_general"/>

                </LinearLayout>

            </TableLayout>

            <TableLayout
                android:background="@color/icons"
                android:layout_margin="@dimen/vistas_alert"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_marginTop="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+/-"
                        android:textColor="@color/negro_general"
                        android:textSize="20sp"/>

                    <TextView

                        android:layout_marginTop="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="40sp"
                        android:textColor="@color/negro_general"
                        android:id="@+id/intervalo"/>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_marginBottom="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="Margen"
                        android:background="@color/icons"
                        android:textColor="@color/negro_general"/>

                </LinearLayout>

            </TableLayout>

        </TableRow>

        <TableRow

            android:gravity="center"
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.005" >

            <TableLayout
                android:background="@color/icons"
                android:layout_margin="@dimen/vistas_alert"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="20sp"
                        android:layout_height="40sp"
                        android:layout_width="match_parent"
                        android:id="@+id/carita"
                        android:src="@drawable/ic_feliz"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_below="@+id/carita"
                        android:layout_marginTop="3dp"
                        android:id="@+id/ultima_marcacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sin marcación"
                        android:textColor="@color/negro_general"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_below="@+id/ultima_marcacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Estado"
                        android:textColor="@color/negro_general"
                        android:id="@+id/flag_tiempo"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_below="@+id/flag_tiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/negro_general"
                        android:id="@+id/ultima_marcacion_fecha"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_marginBottom="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="Última Marcación"
                        android:background="@color/icons"
                        android:textColor="@color/negro_general"/>

                </LinearLayout>

            </TableLayout>

            <TableLayout

                android:background="@color/icons"
                android:layout_margin="@dimen/vistas_alert"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_marginTop="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="10:10"
                        android:textColor="@color/negro_general"
                        android:id="@+id/hora"
                        android:textSize="40sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/negro_general"
                        android:id="@+id/hora_fecha"
                        android:textSize="14sp"
                        android:layout_below="@+id/hora"
                        android:layout_alignParentStart="true" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_marginBottom="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="Próxima Marcación"
                        android:textColor="@color/negro_general"/>

                </LinearLayout>


            </TableLayout>

        </TableRow>

        <Button
            android:id="@+id/btn_marcacion"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            style="@style/BotonActualizar"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" />
    </TableLayout>



</LinearLayout>