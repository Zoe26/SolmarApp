<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".People.PeopleFormActivity"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/content_S"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/body">

        <View
            android:id="@+id/view_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/primero_txt_mje"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#C8C9CB" />

        <View
            android:id="@+id/view_f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/opciones_carga"
            android:layout_marginBottom="5dp"
            android:background="#C8C9CB" />

        <LinearLayout

            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/people_edt_dni"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bd_border"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:maxLength="11"
                android:singleLine="true"
                android:inputType="number"
                style="?android:attr/textAppearanceMedium"
                android:hint="DNI"
                android:text="41882033"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/lnlyOpciones">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons"
                    android:onClick="buscarPeople"
                    android:background="@color/verde"
                    android:src="@drawable/ic_buscar" />
                <!--<Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons"
                    android:onClick="scanBarcode"
                    android:background="@color/verde"
                    style="?android:attr/textAppearanceSmall"
                    android:text="Escanear"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons"
                    android:onClick="scanBarcode"
                    android:background="@color/verde"
                    style="?android:attr/textAppearanceSmall"
                    android:text="Huella"/>-->
            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:textColor="@color/icons"
        android:paddingLeft="10dp"
        android:onClick="salir"
        android:background="@color/verde"
        style="?android:attr/textAppearanceSmall"
        android:text="Salir"/>n

</RelativeLayout>