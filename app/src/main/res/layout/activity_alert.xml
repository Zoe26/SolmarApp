<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idslatam.solmar.Alert.AlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1sp"
            android:layout_weight="1"
            android:background="@drawable/button_bd_border"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_height="60sp"
                android:layout_width="60sp"
                android:id="@+id/imageView5"
                android:layout_gravity="center"
                android:background="@drawable/ic_logo_alert"
                tools:ignore="ContentDescription" />

            <!--android:background="@drawable/ic_logo_alert"-->

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1sp"
            android:background="@drawable/button_bd_border"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1sp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+/-"
                    android:textColor="@color/negro_general"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="40sp"
                    android:textColor="@color/negro_general"
                    android:id="@+id/tolerancia"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Margen"
                android:textColor="@color/negro_general"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1sp"
            android:background="@drawable/button_bd_border"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_height="37sp"
                    android:layout_width="37sp"
                    android:layout_gravity="center"
                    android:id="@+id/carita"
                    android:src="@drawable/ic_feliz"/>

                <TextView
                    android:layout_marginTop="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/negro_general"
                    android:textSize="18sp"
                    android:id="@+id/ultima_marcacion"
                    android:text="Sin marcación"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/negro_general"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"
                    android:text="Estado"
                    android:id="@+id/flag_tiempo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/negro_general"
                    android:textSize="18sp"
                    android:id="@+id/ultima_marcacion_fecha" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Última Marcación"
                android:textColor="@color/negro_general"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1sp"
            android:background="@drawable/button_bd_border"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1sp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="-:-"
                    android:textColor="@color/negro_general"
                    android:id="@+id/hora"
                    android:textSize="40sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/negro_general"
                    android:id="@+id/hora_fecha"
                    android:textSize="14sp"
                    android:layout_below="@+id/hora"
                    android:layout_alignParentStart="true"
                    tools:ignore="ObsoleteLayoutParam" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Proxima Marcación"
                android:textColor="@color/negro_general"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_marcacion"
            android:layout_marginBottom="2sp"
            android:layout_marginTop="2sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            style="@style/BotonActualizar"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            tools:ignore="ObsoleteLayoutParam,SpUsage" />

    </LinearLayout>

</LinearLayout>
