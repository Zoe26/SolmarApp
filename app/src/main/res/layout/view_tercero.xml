<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tercero_txt_ingreso_tracto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:layout_below="@id/primero_tracto"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tercero_txt_carga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:layout_below="@id/tercero_txt_ingreso_tracto"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/tercero_txt_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/verde"
                android:layout_below="@id/tercero_txt_carga"
                style="?android:attr/textAppearanceMedium"/>

            <LinearLayout
                android:id="@+id/buttums"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tercero_txt_dni">

                <Button
                    android:id="@+id/primero_btn_persona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="terceroReturnPersona"
                    android:textColor="@color/verde"
                    android:drawableTop="@drawable/ic_persona"
                    android:background="@drawable/button_bd_border"
                    style="?android:attr/textAppearanceSmall"
                    android:text="Persona"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/verde"
                    android:drawableTop="@drawable/ic_carga"
                    android:background="@drawable/button_bd_border"
                    style="?android:attr/textAppearanceSmall"
                    android:onClick="returnCarga"
                    android:text="Carga"/>

                <Button
                    android:id="@+id/primero_btn_foto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/icons"
                    android:background="@color/verde"
                    android:drawableTop="@drawable/ic_blanco_foto"
                    style="?android:attr/textAppearanceSmall"
                    android:text="Foto"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/edt_delantera"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="parteDelantera"
                android:layout_below="@id/buttums">

                <ImageView
                    android:id="@+id/ic_estado_delantera"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_estado"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Parte Delantera"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    style="?android:attr/textAppearanceMedium"
                    android:hint="Ingrese Nro OR/GR"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_foto"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edt_panoramica"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="partePanoramica"
                android:layout_below="@id/edt_delantera">


                <ImageView
                    android:id="@+id/ic_estado_panoramica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_estado"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Parte PanorÃ¡mica"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    style="?android:attr/textAppearanceMedium"
                    android:hint="Ingrese Nro OR/GR"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_foto"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edt_trasera"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="7dp"
                android:onClick="parteTracera"
                android:layout_below="@id/edt_panoramica">

                <ImageView
                    android:id="@+id/ic_estado_trasera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_estado"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Parte Trasera"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    style="?android:attr/textAppearanceMedium"
                    android:hint="Ingrese Nro OR/GR"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_foto"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/verde"
                android:drawableLeft="@drawable/ic_persona"
                android:paddingLeft="10dp"
                android:background="@drawable/button_bd_border"
                style="?android:attr/textAppearanceMedium"
                android:onClick="returnCarga"
                android:text="Carga"/>

            <Button

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="finalizarSend"
                android:textColor="@color/verde"
                android:drawableLeft="@drawable/ic_foto"
                android:paddingLeft="10dp"
                android:background="@drawable/button_bd_border"
                style="?android:attr/textAppearanceMedium"
                android:text="Finalizar"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>