<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listado_contenedor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.idslatam.solmar.Patrol.ListadoContenedor">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PATROL"
            android:textColor="@color/squarecamera__white"
            style="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="7dp" />

    </LinearLayout>

    <!-- Editext for Search -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:attr/textAppearanceMedium"
        android:text="Buscar Contenedor"
        android:inputType="textVisiblePassword"/>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <!-- Editext for Search -->
        <EditText android:id="@+id/inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:hint="Ingrese nÃºmero"
            android:inputType="textVisiblePassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            style="?android:attr/textAppearanceMedium"
            android:textColor="@color/squarecamera__white"
            android:onClick="Nuevo"
            android:text="SYNC"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            style="?android:attr/textAppearanceMedium"
            android:onClick="crearContenedor"
            android:textColor="@color/squarecamera__white"
            android:text="NUEVO"/>

    </LinearLayout>

    <!-- List View -->
    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
