<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contactos_detalles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.idslatam.solmar.Dialer.ContactosDetalles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#536DFE"
            android:padding="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_contactos_detail"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Nombre_detail"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="@color/squarecamera__white"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Nombre"
                    android:textSize="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="callPrincipal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_call_p"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="right"
                android:layout_marginRight="5sp"
                android:background="@color/Transparent"
                android:src="@drawable/ic_call"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Num_principal_detail"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/negro_general"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="994269173"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/negro_general"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Móvil Principal"
                android:textSize="12dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="callSecundario"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_call_s"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="right"
                android:layout_marginRight="5sp"
                android:background="@color/Transparent"
                android:src="@drawable/ic_call"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Num_secundario_detail"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/negro_general"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="994269173"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/negro_general"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Móvil Secundario"
                    android:textSize="12dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
